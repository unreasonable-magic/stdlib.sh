#!/usr/bin/env sh

stdlib_path="$(realpath "$(dirname "$0")/..")"

case "$1" in
  shellenv)
    printf "export STDLIB_PATH='%s'\n" "$stdlib_path"
    # shellcheck disable=SC2016
    printf 'source "$STDLIB_PATH/lib/stdlib.sh/import.sh"\n'
    ;;
  *)
    echo "unsupported $1"
    exit 1
    ;;
esac
